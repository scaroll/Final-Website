<?xml version="1.0" encoding="UTF-8"?>
<!-- 
  EXAMPLE SITEMAP - Configure with your domain before deployment
  Replace "your-domain.com" with your actual domain
-->
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  
  <!-- Homepage -->
  <url>
    <loc>https://your-domain.com/</loc>
    <lastmod>2025-01-17</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
    <image:image>
      <image:loc>https://your-domain.com/og-image.jpg</image:loc>
      <image:title>Your Site - Premium Custom Closets</image:title>
    </image:image>
  </url>

  <!-- Products Pages -->
  <url>
    <loc>https://your-domain.com/products/</loc>
    <lastmod>2025-01-17</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- Company Pages -->
  <url>
    <loc>https://your-domain.com/about/</loc>
    <lastmod>2025-01-17</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>

  <url>
    <loc>https://your-domain.com/contact/</loc>
    <lastmod>2025-01-17</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>

  <!-- Add more URLs as needed -->

</urlset>